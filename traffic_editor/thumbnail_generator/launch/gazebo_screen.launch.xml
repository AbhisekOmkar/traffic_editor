<?xml version='1.0' ?>

<launch>
  <arg name="color" description="Screen color to be used, choose between green or white" />
  <arg name="root_path" description="Root path of the thumbnail_generator folder" />
  <arg name="model_paths" description="Path to additional gazebo models." />
  <arg name="resource_paths" description="Path to additional gazebo resources." />
  <arg name="plugin_paths" description="Path to additional gazebo plugins." />

  <let name="world_path" value="$(var root_path)/worlds/top_view_$(var color).world" />

  <executable cmd="gzserver --verbose -s libgazebo_ros_factory.so -s libgazebo_ros_init.so $(var world_path)" output="both">
    <env name="GAZEBO_MODEL_PATH" value="$(var model_path)" />
    <env name="GAZEBO_RESOURCE_PATH" value="$(var resource_path)" />
    <env name="GAZEBO_PLUGIN_PATH" value="$(var plugin_path)" />
    <env name="GAZEBO_MODEL_DATABASE_URI" value="" />
  </executable>
  <executable cmd="gzclient --verbose $(var world_path)" output="both">
    <env name="GAZEBO_MODEL_PATH" value="$(var model_path)" />
    <env name="GAZEBO_RESOURCE_PATH" value="$(var resource_path)" />
    <env name="GAZEBO_PLUGIN_PATH" value="$(var plugin_path)" />
  </executable>

</launch>
